{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "mutate": [
    "src/**/*.ts?(x)",
    "!src/**/*@(.test|.spec|Spec).ts?(x)"
  ],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "ignorePatterns": [
    "**/coverage/**/*"
  ],
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.json"
  }
}
